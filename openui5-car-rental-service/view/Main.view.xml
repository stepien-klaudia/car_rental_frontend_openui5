<mvc:View xmlns:core="sap.ui.core" xmlns:f="sap.f" 
    controllerName="openui5-car-rental-service.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">

    <App id="app">

        <Page id="page" showHeader="false">
            <f:ShellBar 
            title="Strona główna"
            >
                <f:profile>
                    <f:Avatar initials="UI" press="onProfilePress"></f:Avatar>
                </f:profile>
            </f:ShellBar>
            <IconTabHeader 
            id= "iconTabHeader"
            mode="Inline"
            select= "onTabSelect">
            <items>
            <IconTabFilter key="zarzadzanie-flota" text="Zarządzanie flotą"></IconTabFilter>
            <IconTabFilter key="zarzadzanie-klientami" text="Zarządzanie klientami"></IconTabFilter>
            <IconTabFilter key= "zarzadzanie-pracownikami" text="Zarządzanie pracownikami"></IconTabFilter>
            <IconTabFilter key="zarzadzanie-rezerwacjami" text="Zarządzanie rezerwacjami"></IconTabFilter>
            <IconTabFilter key="zarzadzanie-punktami" text="Zarządzanie punktami"></IconTabFilter>
            <IconTabFilter key="raportowanie" text="Raportowanie"></IconTabFilter>
            </items>
            </IconTabHeader>
            <content>
                <FlexBox id="flotaContent" class="sapUiTinyMarginTop">
                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Nadchodzące przeglądy"
                        subheader="Kontroluj stan swoich pojazdów"
                        press="onTilePress"
                        ariaLabel="UpcomingInspections">
                        <TileContent unit="Samochody wymagające przeglądu">
                            <NumericContent value="1" icon="sap-icon://insurance-car"></NumericContent>
                        </TileContent>  
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Nowy pojazd"
                        subheader="Dodaj nowy pojazd do floty"
                        ariaLabel="NewCar"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://car-rental"></ImageContent>
                        </TileContent>
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Edytuj pojazdy"
                        subheader="Edytuj lub usuń pojazd z floty"
                        ariaLabel="EditCar"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://write-new-document"></ImageContent>
                        </TileContent>
                    </GenericTile>
                </FlexBox>
                <FlexBox id="clientContent" class="sapUiTinyMarginTop" visible="false">
                 <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Nowy klient"
                        subheader="Dodaj nowego klienta do bazy"
                        ariaLabel="NewClient"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://add-contact"/>
                        </TileContent>  
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Edytuj klientów"
                        subheader="Edytuj dane klienta lub wrzuć go na czarną listę"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://employee-pane"></ImageContent>
                        </TileContent>
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Czarna lista"
                        subheader="Klienci pozbawieni prawa do dokonania rezerwacji"
                        press="onTilePress">
                        <TileContent>
                            <NumericContent value="10" icon="sap-icon://employee-rejections"></NumericContent>
                        </TileContent>
                    </GenericTile>
                </FlexBox>
                <FlexBox id="pracownikContent" class="sapUiTinyMarginTop" visible="false">
                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Dodaj konto pracownika"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://add-employee"></ImageContent>
                        </TileContent>  
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Zarządzanie kontami pracowników"
                        subheader="Zarządzaj dostępami pracowników"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://employee-lookup"></ImageContent>
                        </TileContent>
                    </GenericTile>
                </FlexBox>
              <FlexBox id="rezerwacjaContent" class="sapUiTinyMarginTop" visible="false">
                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Dodaj rezerwację"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://add-calendar"></ImageContent>
                        </TileContent>  
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Zarządzanie rezerwacjami"
                        subheader="Wyświetlaj, edytuj lub anuluj rezerwację"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://check-availability"></ImageContent>
                        </TileContent>
                    </GenericTile>
                </FlexBox>
                <FlexBox id="punktContent" class="sapUiTinyMarginTop" visible="false">
                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Dodaj punkt"
                        press="onTilePress">
                        <TileContent>
                            <ImageContent src="sap-icon://globe"></ImageContent>
                        </TileContent>  
                    </GenericTile>

                    <GenericTile 
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop float: left"
                        header="Zarządzanie punktami"
                        subheader="Wyświetlaj, edytuj lub usuwaj punkty"
                        press="onTilePress">
                        <TileContent>
                            <NumericContent value="10" icon="sap-icon://building"></NumericContent>
                        </TileContent>
                    </GenericTile>
                </FlexBox>
                <VBox id="raportContent" class="sapUiTinyMarginTop" visible="false">
                    <Title text = "Raporty dotyczące floty" level="H4" class="margin-bottom: 1rem"></Title>
                    <FlexBox class="sapUiTinyMarginTop">
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Stan floty"
                            press="onTilePress">
                            <TileContent>
                                <ImageContent src="sap-icon://car-rental"></ImageContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Historia pojazdu"
                            press="onTilePress">
                            <TileContent>
                                <ImageContent src="sap-icon://insurance-car"></ImageContent>
                            </TileContent>
                        </GenericTile>
                    </FlexBox>
                    <Title text = "Raporty dotyczące klientów" level="H4" class="margin-bottom: 1rem"></Title>
                    <FlexBox class="sapUiTinyMarginTop">
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Historia wypożyczeń klienta"
                            press="onTilePress">
                            <TileContent>
                                <ImageContent src="sap-icon://cart"></ImageContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Nowi klienci"
                            press="onTilePress">
                            <TileContent>
                                <NumericContent value="10" icon="sap-icon://decision"></NumericContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Najczęściej wypożyczający klienci"
                            press="onTilePress">
                            <TileContent>
                                <ImageContent src="sap-icon://bar-chart"></ImageContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Zalegający klienci"
                            press="onTilePress">
                            <TileContent>
                                <NumericContent value="10" icon="sap-icon://money-bills"></NumericContent>
                            </TileContent>
                        </GenericTile>
                    </FlexBox>
                    <Title text="Raporty dotyczące wypożyczeń" level="H4" class="margin-bottom: 1rem"></Title>
                    <FlexBox class="sapUiTinyMarginTop">
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Wypożyczenia w danym okresie"
                            press="onTilePress">
                            <TileContent>
                                <NumericContent value="10" icon="sap-icon://present"></NumericContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Zbliżające się zwroty"
                            press="onTilePress">
                            <TileContent>
                                <NumericContent value="10" icon="sap-icon://in-progress-2"></NumericContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Opóźnienia w zwrocie"
                            press="onTilePress">
                            <TileContent>
                                <NumericContent value="10" icon="sap-icon://lateness"></NumericContent>
                            </TileContent>
                        </GenericTile>
                        <GenericTile 
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom float: left"
                            header="Wolne i zajęte samochody"
                            press="onTilePress">
                            <TileContent>
                                <ImageContent src="sap-icon://collision"></ImageContent>
                            </TileContent>
                        </GenericTile>
                    </FlexBox>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>
