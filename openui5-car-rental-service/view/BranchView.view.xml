<mvc:View  xmlns:smarttable="sap.ui.comp.smarttable" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:f="sap.f"
    controllerName="openui5-car-rental-service.controller.BranchView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
     <App>
        <Page showNavButton="true" navButtonPress="onNavPress">
            <f:ShellBar 
            title="Dane Punktu"
            secondTitle="Zarządzanie punktami / Edycja danych punktów"
            >
                <f:profile>
                    <f:Avatar initials="UI" press="onProfilePress"></f:Avatar>
                </f:profile>
            </f:ShellBar>
            <VBox class="sapUiSmallMargin">
            <MessageStrip 
                text="Ten widok nie pozwala na edycję danych, cofnij się do listy punktów aby edytować."
                showIcon="true"
                showCloseButton="true"
                class="sapUiMediumMarginBottom"
            ></MessageStrip>
            <form:Form 
            id = "BranchViewForm"
            editable="false"
            >
            <form:title>
                <core:Title text="Wyświetl dane punktu"></core:Title>
            </form:title>
            <form:layout>
                <form:ResponsiveGridLayout 
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="3"
                adjustLabelSpan="true"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="4"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="true"></form:ResponsiveGridLayout>
            </form:layout>
            <form:formContainers>
                <form:FormContainer >
                    <form:title>
                        <core:Title text = "Dane punktu"></core:Title>
                    </form:title>
                    <form:formElements>
                        <form:FormElement label = "Nazwa punktu" >
                            <form:fields>
                                <Input value = "{/branch/name}" id = "BranchViewName" required="true" editable="false"></Input>
                            </form:fields>
                        </form:FormElement>
                    </form:formElements>
                </form:FormContainer>
                <form:FormContainer >
                    <form:title>
                        <core:Title text="Dane adresowe"></core:Title>
                    </form:title>
                    <form:formElements>
                        <form:FormElement label = "Ulica">
                            <form:fields>
                                <Input value = "{/branch/branchUlica }" id = "BranchViewUlica" required="true" editable="false"></Input>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label = "Numer domu">
                            <form:fields>
                                <Input value="{/branch/branchHouseNr}" id = "BranchViewHouseNr" required="true" editable="false"></Input>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label = "Numer lokalu">
                            <form:fields>
                                <Input value="{/branch/branchLocNr}" id = "BranchViewLocNr" required="false" editable="false"></Input>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label = "Kod pocztowy">
                            <form:fields>
                                <MaskInput value="{/branch/branchPostalCode}" mask = "DD-DDD" id = "BranchViewPostalCode" required="true" editable="false">
                                    <rules>
                                        <MaskInputRule maskFormatSymbol="D" regex="[0-9]"></MaskInputRule>
                                    </rules>
                                </MaskInput>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label = "Miasto">
                            <form:fields>
                                <Input value="{/branch/city}" id = "BranchViewCity" required="true" editable="false"></Input>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label = "Województwo">
                            <form:fields>
                                <Select selectedKey="{/branch/branchRegion}" id = "BranchViewRegion" editable="false">
                                    <core:Item key="DS" text="Dolnośląskie" />
                                    <core:Item key="KP" text="Kujawsko-pomorskie" />
                                    <core:Item key="LU" text="Lubelskie" />
                                    <core:Item key="LB" text="Lubuskie" />
                                    <core:Item key="LD" text="Łódzkie" />
                                    <core:Item key="MA" text="Małopolskie" />
                                    <core:Item key="MZ" text="Mazowieckie" />
                                    <core:Item key="OP" text="Opolskie" />
                                    <core:Item key="PK" text="Podkarpackie" />
                                    <core:Item key="PD" text="Podlaskie" />
                                    <core:Item key="PM" text="Pomorskie" />
                                    <core:Item key="SL" text="Śląskie" />
                                    <core:Item key="SK" text="Świętokrzyskie" />
                                    <core:Item key="WN" text="Warmińsko-mazurskie" />
                                    <core:Item key="WP" text="Wielkopolskie" />
                                    <core:Item key="ZP" text="Zachodniopomorskie" />
                                </Select>
                            </form:fields>
                        </form:FormElement>
                    </form:formElements>
                </form:FormContainer>
            </form:formContainers>
            </form:Form>
            </VBox>
        </Page>
    </App>
</mvc:View>