<mvc:View  xmlns:smarttable="sap.ui.comp.smarttable" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:f="sap.f"
    controllerName="openui5-car-rental-service.controller.UpcomingInspections"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
<App>
    <Page showNavButton="true" navButtonPress="onNavPress">
        <f:ShellBar 
            title="Nadchodzące i zaległe przeglądy"
            secondTitle="Zarządzanie flotą"
            >
                <f:profile>
                    <f:Avatar initials="UI" press="onProfilePress"></f:Avatar>
                </f:profile>
            </f:ShellBar>
        
        <IconTabBar select=".onFilterSelect" class="sapUiResponsiveContentPadding">
        <items>
            <IconTabFilter showAll="true" text = "Wszystkie samochody" count = "100" key="All"/>
            <IconTabFilter icon="sap-icon://warning" iconColor="Critical" count = "90" text="Przegląd w tym miesiącu" key="Warning"/>
            <IconTabFilter icon= "sap-icon://high-priority" iconColor="Negative" count = "10" text = "Przeglądy straciły ważność" key = "Critical"/>
        </items>
        <content>
            <Table id="UpcomingInspectionsTable" inset="false" headerText="Samochody do sprawdzenia">
                <columns>
                    <Column >
                        <Text text="Numer rejestracyjny"></Text>
                    </Column>
                    <Column >
                        <Text text="Status"></Text>
                    </Column>
                    <Column >
                        <Text text ="Data końca ważności przeglądu"></Text>
                    </Column>
                    <Column >
                        <Text text="Data końca ważności ubezpieczenia"></Text>
                    </Column>
                </columns>
            </Table>
        </content>
        </IconTabBar>
    </Page>
</App>

</mvc:View>